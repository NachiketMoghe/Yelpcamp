<%- include('../partials/header') -%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead text-white" > <b>Yelpcamp</b></p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail img-thumbnail">
            <img class="img-fluid" class="img-responsive" src="<%= campground.image %>">
            <div class="caption-full container"><hr>
                <div class="float-right"><h5 >$9.00/night</h5></div>
                <h4><%= campground.name %></h4>
               <p><%= campground.description %></p>
        </div></div>
        </div><div class="row col-md-12"><br></div>
        <div class=" col-md-3 "></div>
        <div class=" img-thumbnail  well col-md-9 ">
            <br><div class="text-right">
                <a class="btn btn-m btn-success " href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
            </div>
        <% campground.comments.forEach(function(comment){ %>
            <hr><div class="row">
                <div class="col-md-12 well">
                    <strong><%= comment.author %></strong> 
                    <span class="float-right">
                        10 days ago
                    </span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            
        </div>        </div><div class="row col-md-12"><br></div>

    </div>
    </div>
</div>




<%- include('../partials/footer') -%>
