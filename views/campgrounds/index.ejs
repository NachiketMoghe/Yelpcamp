<%- include('../partials/header'); -%>

<head>
   <title>Campgrounds</title>
</head>

    <div class="container">  
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp</h1>
        <p>View our hand-picked campgrounds </p>
        <p>
            <a class="btn btn-primary" href="campgrounds/new">Add a new Campground</a>
        </p>
        </div>
        
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campgrounds){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="img-fluid img-thumbnail">
                        <img class="img-fluid img-thumbnail" src="<%= campgrounds.image %>" >
                        <div class="caption">
                        <h4><%= campgrounds.name %></h4>
                        </div> <p><a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary"> More Info</a></p>     
                    </div>
                </div>
                <% });%>                  
                
            
    </div>
    
    </div>

<%- include('../partials/footer'); -%>
